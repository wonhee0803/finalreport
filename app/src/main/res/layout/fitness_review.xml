<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595B5E"
    tools:context=".ReviewFitness">

    <Button
        android:id="@+id/buttonClose_third"
        android:layout_width="62dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:outlineProvider="background"
        android:text="뒤로"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Name_text"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginTop="64dp"
        android:text="MN휘트니스 강남점"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/telephone_review"
        android:layout_width="158dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:autoLink="phone"
        android:text="+82-507-1361-0000"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/Main_image"
        app:layout_constraintTop_toBottomOf="@+id/Name_text" />

    <ImageView
        android:id="@+id/Main_image"
        android:layout_width="175dp"
        android:layout_height="172dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/mnfitness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClose_third" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:text="평일 06:00~24:00\n가입비, 부가세 없는\n월 30,000"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toEndOf="@+id/Main_image"
        app:layout_constraintTop_toBottomOf="@+id/telephone_review" />

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/like"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/review_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/dislike_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/dislike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toEndOf="@+id/like_amount"
        app:layout_constraintTop_toBottomOf="@+id/Main_image"
        />

    <TextView
        android:id="@+id/dislike_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/review_text"
        app:layout_constraintStart_toEndOf="@+id/dislike_button"
        app:layout_constraintTop_toBottomOf="@+id/Main_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/like_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/review_text"
        app:layout_constraintStart_toEndOf="@+id/like_button"
        app:layout_constraintTop_toBottomOf="@+id/Main_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/review_text"
        android:layout_width="372dp"
        android:layout_height="394dp"
        android:layout_gravity="start"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="첫 리뷰를 달아주세요:)"
        android:scrollbars="vertical"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dislike_button" />

    <EditText
        android:id="@+id/chat_bar"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/copyright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        android:gravity="start"
        android:text=" copyright"
        android:textColor="#595B5E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/button_send"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/chat_bar"
        app:layout_constraintEnd_toEndOf="@+id/chat_bar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/personal_ID"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:background="#B5B4B4"
        android:hint="ID"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/copyright"
        app:layout_constraintEnd_toStartOf="@+id/chat_bar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>